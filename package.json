{
    "name": "lwc-builder",
    "description": "A tool to generate Lightning Web Component (LWC) template for Salesforce Lightning Platform",
    "version": "0.1.0",
    "author": "ninoish",
    "bugs": "https://github.com/developerforce/lwc-builder/issues",
    "dependencies": {
        "@salesforce-ux/design-system": "^2.13.7",
        "change-case": "^4.1.2",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "file-saver": "^2.0.2",
        "helmet": "^4.2.0",
        "jszip": "^3.5.0"
    },
    "devDependencies": {
        "eslint": "^7.12.1",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "lwc-services": "^2.2.3",
        "prettier": "^2.1.2"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/developerforce/lwc-builder",
    "husky": {},
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "repository": "ninoish/lwc-builder",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "node scripts/server.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "lwc-services watch"
    }
}
